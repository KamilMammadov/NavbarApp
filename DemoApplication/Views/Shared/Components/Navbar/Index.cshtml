@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<DemoApplication.Database.Models.Navbar>


 


@foreach (var navbar in Model)
{

    <li class="menu-item has-children">
        <a  href="">
            @if (navbar.IsBold)
            {
                <b>@navbar.Title</b>
            }
            else{

            @navbar.Title
            }
            <i class="fas fa-chevron-down dropdown-arrow"></i>
            
        </a>
      
            <ul class="sub-menu">
                @foreach (var subNav in navbar.Subnavbars)
                {
                    <li> <a asp-route="@subNav.Url">@subNav.Title</a></li>
                }
            </ul>
        
    </li>

}